{
  "name": "@oselvar/openapi-validator",
  "version": "0.3.1",
  "description": "Validate OpenAPI requests and responses against Zod schemas",
  "author": {
    "name": "Oselvar Ltd",
    "email": "aslak@oselvar.com",
    "url": "https://github.com/oselvar/openapi-validator"
  },
  "files": [
    "./dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./aws-lambda": {
      "import": "./dist/aws-lambda/index.js",
      "require": "./dist/aws-lambda/index.cjs",
      "types": "./dist/aws-lambda/index.d.ts"
    }
  },
  "keywords": [
    "openapi",
    "zod",
    "json-schema",
    "astro",
    "fastify",
    "remix",
    "nextjs"
  ],
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "compile": "tsc --build",
    "build": "tsup --dts --format cjs,esm --clean --entry src/index.ts --entry src/aws-lambda/index.ts",
    "upgrade": "npm-check-updates --upgrade",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "format": "prettier './**/*.ts' --write",
    "lint": "eslint './**/*.ts' --fix",
    "prepublishOnly": "npm run build",
    "openapi-yaml": "OUTPUT=yaml ts-node --esm ./scripts/openapi-generate.ts > src/test-app/openapi.yaml",
    "openapi-client": "swagger-typescript-api --path src/test-app/openapi.yaml --output src/test-app --name ApiClient.ts --responses --add-readonly --sort-types --sort-routes --extract-request-params --extract-response-error --disable-throw-on-error --single-http-client",
    "openapi": "npm run openapi-yaml && npm run openapi-client"
  },
  "repository": "oselvar/openapi-routes",
  "license": "MIT",
  "optionalDependencies": {
    "@asteasolutions/zod-to-openapi": "^6.2.0",
    "@types/aws-lambda": "^8.10.126",
    "aws-lambda": "^1.0.7",
    "fastify": "^4.25.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "@vitest/coverage-v8": "1.0.4",
    "@vitest/ui": "1.0.4",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "express": "4.18.2",
    "fastify": "4.25.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "npm-check-updates": "16.14.11",
    "prettier": "3.1.1",
    "swagger-typescript-api": "13.0.3",
    "ts-node": "10.9.2",
    "tsup": "8.0.1",
    "typescript": "5.3.3",
    "vite": "5.0.7",
    "vitest": "1.0.4"
  },
  "prettier": {
    "semi": true,
    "plugins": [],
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --quiet --fix"
    ],
    "*.{json,ts}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "@typescript-eslint/consistent-type-exports": "error",
      "@typescript-eslint/consistent-type-imports": "error"
    },
    "plugins": [
      "simple-import-sort"
    ],
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "dist"
    ]
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/aws-lambda/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "dependencies": {
    "get-port": "7.0.0"
  }
}
